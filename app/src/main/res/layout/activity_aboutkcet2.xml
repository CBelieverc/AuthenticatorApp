<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loki"
    android:paddingStart="10dp"
    tools:context=".aboutkcet2">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="329dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="53dp"
            android:layout_marginEnd="19dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center_vertical"
            android:text="K-cet Exam Details"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/application"
            android:layout_width="329dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="284dp"
            android:background="@drawable/rectanle"
            android:drawableStart="@drawable/ic_web"
            android:drawablePadding="15dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center_vertical"
            android:padding="10dp"

            android:text="K-cet Application Process"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/syllabus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="82dp"

            android:layout_marginEnd="19dp"

            android:layout_marginBottom="214dp"

            android:background="@drawable/rectanle"
            android:drawableStart="@drawable/ic_baseline_email_24white"
            android:drawablePadding="15dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="K-cet Exam Syllabus"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"

            android:layout_marginStart="12dp"
            android:layout_marginTop="148dp"

            android:layout_marginEnd="19dp"
            android:layout_marginBottom="148dp"
            android:background="@drawable/rectanle"
            android:drawablePadding="15dp"
            android:fontFamily="@font/aclonica"

            android:gravity="center_vertical"

            android:padding="10dp"
            android:text="Check K-cet Result"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/ic_baseline_email_24white" />

        <TextView
            android:id="@+id/admission"
            android:layout_width="329dp"
            android:layout_height="55dp"
            android:layout_alignTop="@+id/application"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="198dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="86dp"
            android:background="@drawable/rectanle"
            android:drawablePadding="15dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="College Admission Process"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/ic_baseline_email_24white" />


        <TextView
            android:id="@+id/kea_website"
            android:layout_width="329dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/rectanle"
            android:drawableStart="@drawable/ic_wifi"
            android:drawablePadding="15dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center_vertical"
            android:padding='10dp'
            android:text="Visit Website"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/ic_web" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>