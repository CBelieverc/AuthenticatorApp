<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loki"
    tools:context=".subjects1">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimaryDark">>

            <ImageView
                android:id="@+id/back12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:layout_width="329dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="19dp"
                android:fontFamily="@font/aclonica"
                android:gravity="center_vertical"
                android:text="Video lectures"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />



        </RelativeLayout>

        <Button
            android:id="@+id/button_v1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_bg"
            android:onClick="openactivity_v1"
            android:padding="15dp"
            android:text="MATHEMATICS"
            android:textSize="18sp"
            app:backgroundTint="@color/colorWhite"
            app:cornerRadius="800dp" />

        <Button
            android:id="@+id/button_v2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_bg"
            android:onClick="openactivity_v2"
            android:padding="15dp"
            android:text="PHYSICS"
            android:textSize="18sp"
            app:backgroundTint="@color/colorWhite"
            app:cornerRadius="800dp" />

        <Button
            android:id="@+id/button_v3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_bg"
            android:onClick="openactivity_v3"
            android:padding="15dp"
            android:text="CHEMISTRY"
            android:textSize="18sp"
            app:backgroundTint="@color/colorWhite"
            app:cornerRadius="800dp" />

        <Button
            android:id="@+id/button_v4"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_bg"
            android:onClick="openactivity_v4"
            android:padding="15dp"
            android:text="BIOLOGY"
            android:textSize="18sp"
            app:backgroundTint="@color/colorWhite"
            app:cornerRadius="800dp" />

    </LinearLayout>
</ScrollView>